{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"]
    },
    "types": ["electron-vite/node"],
    "erasableSyntaxOnly": true,
    "libReplacement": false
  },
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/shared/**/*",
    "src/preload/**/*",
    "scripts/**/*",
    "shims.d.ts"
  ]
}
